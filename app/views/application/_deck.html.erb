<div class="deck">
  <h3><%= title %></h3>

  <div class="cards">
    <% rand(3..5).times do %>
      <div class="card">
        <%= image_tag('http://placehold.it/200x200', size: '200x200', class: 'avatar') %>

        <ul class="badges">
          <% rand(1..3).times do %>
            <li><%= image_tag('http://placehold.it/40x40', size: '40x40', class: 'badge') %></li>
          <% end %>
        </ul>

        <div class="details">
          <h4>John Doe</h4>
          <h5>Developer</h5>
        </div>
      </div>
    <% end %>
  </div>
</div>

