<div class="deck">
  <h3><%= title %></h3>

  <div class="cards">
    <% rand(3..5).times do %>
      <div class="card">
        <img src="http://placehold.it/100x100" class="avatar" />

        <ul class="badges">
          <% rand(1..3).times do %>
            <li><img src="http://placehold.it/30x30" class="badge"></li>
          <% end %>
        </ul>

        <div class="details">
          <h4>John Doe</h4>
          <h5>Developer</h5>
        </div>
      </div>
    <% end %>
  </div>
</div>

