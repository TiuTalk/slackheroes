<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= page_title(app_name: 'SlackHeroes') %></title>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= body_class %>">
  <section class="hero">
    <header class="header">
      <img src="http://placehold.it/300x50" class="logo" />
      <h1>SlackHeroes</h1>
      <h2>Something something</h2>
    </header>

    <div class="deck">
      <h3>Deck title</h3>

      <div class="cards">
        <% rand(3..5).times do %>
          <div class="card">
            <img src="http://placehold.it/100x100" class="avatar" />

            <ul class="badges">
              <% rand(1..3).times do %>
                <li><img src="http://placehold.it/30x30" class="badge"></li>
              <% end %>
            </ul>

            <div class="details">
              <h4>John Doe</h4>
              <h5>Developer</h5>
            </div>
          </div>
      <% end %>
      </div>
    </div>
  </section>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
